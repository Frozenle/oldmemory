/**index.wxss**/
@import "/img/img.wxss";
/*页面跟组件不同,需要设置页面的高度为100%,相当于网页中的body*/
page {
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.leftArrow,.rightArrow {
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: absolute;
  width: 80rpx;
  height: 65rpx;
  top: 34%;
  z-index: 1;
}
.rightArrow {
  right: 0%;
}
/*下面都是各个组件公用的样式*/
.backgroundImg {
  background-size: 100% 100%;
  height: 100%;
}
.basicText {
  width: 200rpx;
  font-size: 50rpx;
}
.text {
  width: 100%;
  position: absolute;
  top: 34%;
  text-align: center;
}